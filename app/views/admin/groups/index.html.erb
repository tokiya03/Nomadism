<div class="container">
  <div class="row my-4">
    <div class="col">
      <div class="row">
        <div class="col-md-6 col-sm-12">
          <h3>グループ一覧（管理者）</h3>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="search_form">
            <%= form_with url: admin_search_group_path, method: :get, local: true, class: "d-flex justify-content-end" do |f| %>
              <%= f.text_field :word, placeholder: ' 検索するグループ名を入力', class: "form-control search_group_box" %>
              <%= f.submit '検索', class: "btn btn-sm btn-outline-primary search_group_btn" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-xl-11 col-lg-12 mx-auto">
          <div class="row border-top border-bottom">
            <div class="col-lg-3 col-md-4 col-sm-12 py-3 fw-bold">グループ名</div>
            <div class="col-lg col-md col-sm-12 py-3 fw-bold">紹介文</div>
            <div class="col-md-2 col-sm-12 py-3 fw-bold">メンバー数</div>
            <div class="col-lg-1 col-md-2 col-sm-12 py-3"></div>
          </div>
          <% @groups.each do |group| %>
            <div class="row border-bottom">
              <div class="col-lg-3 col-md-4 col-sm-12 py-2">
                <%= link_to admin_group_path(group.id) do %>
                  <%= group.name %>
                <% end %>
              </div>
              <div class="col-lg col-md col-sm-12 py-2"><%= simple_format(group.introduction) %></div>
              <div class="col-md-2 col-sm-12 py-2 pl-4">
                <i class="fa-solid fa-user-group"></i> <%= group.user_groups.count %>
              </div>
              <div class="col-lg-1 col-md-2 col-sm-12 py-2">
                <%= link_to '削除', admin_group_path(group.id), method: :delete, "data-confirm" => "本当にグループを削除しますか？", class: "btn btn-sm btn-danger" %>
              </div>
            </div>
          <% end %>
        </div>
        <!-- ページネーションの記述 -->
        <%= paginate @groups %>
      </div>
    </div>
  </div>
</div>
