<div class="container">
  <div class="row no-gutters">
    <div class="col-lg-5 col-md-8 col-sm-12 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">管理者ログイン</h5>

      <div class="form-body p-4">
        <div class="row">
          <div class="col text-center">
            <p>管理者アドレスとパスワードを入力してください。</p>
          </div>
        </div>

        <div class="row mt-2">
          <div class="col">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-envelope"></i></span>
                </div>
                <%= f.email_field :email, autocomplete: "email", autofocus: true, class: "form-control", placeholder: 'メールアドレス' %>
              </div>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
                </div>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "inputPassword", placeholder: 'パスワード' %>
              </div>

              <div class="d-flex justify-content-start ml-1">
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :ログイン名を保存する %>
                  </div>
                <% end %>
              </div>

              <%= f.submit 'ログイン', class: "btn-lg btn-block btn-info my-2" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
