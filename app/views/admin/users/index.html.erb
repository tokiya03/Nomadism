<div class="container">
  <div class="row my-4">
    <div class="col">
      <div class="row">
        <div class="col">
          <h3>ユーザー一覧（管理者）</h3>
        </div>
      </div>

      <div class="row">
        <div class="col-9 mx-auto">
          <div class="row border-top border-bottom">
            <div class="col py-2"></div>
            <div class="col py-2 fw-bold">ユーザー名</div>
            <div class="col py-2 fw-bold">メールアドレス</div>
            <div class="col py-2 fw-bold">登録日</div>
          </div>
          <% @users.each do |user| %>
            <div class="row border-bottom">
              <div class="col py-2">
                <%= link_to admin_user_path(user.id) do %>
                  <%= image_tag user.get_profile_image(60 , 60), class: "rounded-circle mx-auto d-block" %>
                <% end %>
              </div>
              <div class="col py-2">
                <%= link_to admin_user_path(user.id) do %>
                  <%= user.name %>
                <% end %>
              </div>
              <div class="col py-2"><%= user.email %></div>
              <div class="col py-2"><%= user.created_at.strftime('%Y/%m/%d') %></div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- ページネーションの記述 -->
      <%= paginate @users %>
    </div>
  </div>
</div>
