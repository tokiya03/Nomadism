<div class="container">
  <div class="row my-4">
    <div class="col">
      <div class="row">
        <div class="col">
          <h3>投稿詳細（管理者）</h3>
        </div>
      </div>

      <div class="row justify-content-between mt-2">
        <div class="col-5 border" style="height: 500px;">
          GoogleMapの地図
        </div>

        <div class="col-6">
          <div class="row">
            <div class="col">
              <div class="row border-top d-flex align-items-middle">
                <div class="col-4 py-3">投稿者</div>
                <div class="col py-3"><%= link_to @post.user.name, admin_user_path(@post.user_id) %></div>
              </div>
              <div class="row border-top d-flex align-items-middle">
                <div class="col-4 py-3">店名（場所の名前）</div>
                <div class="col py-3"><%= @post.name %></div>
              </div>
              <div class="row border-top">
                <div class="col-4 py-3">説明（感想など）</div>
                <div class="col py-3"><%= @post.caption %></div>
              </div>
              <div class="row border-top d-flex align-items-middle">
                <div class="col-4 py-3">住所</div>
                <div class="col py-3"><%= @post.address %></div>
              </div>
              <div class="row border-top d-flex align-items-middle">
                <div class="col-4 py-3">投稿日時</div>
                <div class="col py-3"><%= @post.created_at.strftime('%Y/%m/%d(%a)' + '　' + '%H:%M') %></div>
              </div>
            </div>

          </div>

          <div class="row mt-3">
            <div class="col d-flex justify-content-end">
              <%= link_to '削除する', admin_post_path(@post.id), method: :delete, "data-confirm" => "投稿を削除しますか？", class: "btn btn-sm btn-danger" %>
            </div>
          </div>

          <!-- 投稿に対するコメント -->
          <div id="comment_index">
            <%= render 'admin/comments/index', post: @post %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
