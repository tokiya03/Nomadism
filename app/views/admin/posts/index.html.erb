<div class="container">
  <div class="row my-4">
    <div class="col">
      <div class="row">
        <div class="col">
          <h3>投稿一覧ページ（管理者）</h3>
        </div>
      </div>

      <div class="row mt-2">
        <div class="col-7 border">
          <div id="map"></div>
        </div>

        <div class="col ml-2 overflow-auto" style="height: 600px;">
          <% @posts.each do |post| %>
            <%= link_to admin_post_path(post.id), class: "text-dark text-decoration-none" do %>
              <div class="row posts">
                <div class="col border py-1">
                  <div class="row">
                    <div class="col-3 pr-0">スポット名：</div>
                    <div class="col pl-0"><%= post.name %></div>
                  </div>
                  <div class="row">
                    <div class="col-3 pr-0">場所の説明：</div>
                    <div class="col pl-0"><%= post.caption.truncate(22) %></div>
                  </div>
                  <div class="row">
                    <div class="col-3 pr-0">住　所　　：</div>
                    <div class="col pl-0"><%= post.address %></div>
                  </div>
                  <!-- ユーザー名と画像以外は投稿詳細へ遷移させたいけど、仕様上不可 -->
                  <%= link_to admin_user_path(post.user_id), class: "text-dark text-decoration-none" do %>
                    <div class="row">
                      <div class="col d-flex justify-content-end">
                        <%= image_tag post.user.get_profile_image(30, 30), class: "rounded-circle mr-1" %> <%= post.user.name %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>
