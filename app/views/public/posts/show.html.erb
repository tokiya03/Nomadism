<div class="container">
  <div class="row my-4">
    <div class="col">
      <div class="row">
        <div class="col">
          <h3>投稿詳細</h3>
        </div>
      </div>

      <div class="row justify-content-between mt-2">
        <div class="col-6 border" style="height: 500px;">
          GoogleMapの地図
        </div>

        <div class="col-5">
          <div class="row">
            <div class="col">
              <div class="row border-top">
                <div class="col-5 py-3">投稿者</div>
                <div class="col py-3"><%= link_to @post.user.name, user_path(@post.user_id) %></div>
              </div>
              <div class="row border-top">
                <div class="col-5 py-3">店名（場所の名前）</div>
                <div class="col py-3"><%= @post.name %></div>
              </div>
              <div class="row border-top">
                <div class="col-5 py-3">説明（感想など）</div>
                <div class="col py-3"><%= @post.caption %></div>
              </div>
              <div class="row border-top">
                <div class="col-5 py-3">住所</div>
                <div class="col py-3"><%= @post.address %></div>
              </div>
              <div class="row border-top">
                <div class="col-5 py-3">投稿日時</div>
                <div class="col py-3"><%= @post.created_at.strftime('%Y/%m/%d(%a)' + '　' + '%H:%M') %></div>
              </div>
            </div>
          </div>

          <% if @post.user_id == current_user.id %>
            <div class="row">
              <div class="col d-flex justify-content-end">
                <%= link_to '編集する', edit_post_path(@post.id), class: "btn btn-sm btn-success" %>
              </div>
            </div>
          <% end %>

          <!-- 投稿に対するコメント -->
          <div id="comment_index">
            <%= render 'public/comments/index', post: @post, comment: @comment %>
          </div>
          <%= render 'public/comments/form', post: @post, comment: @comment %>
        </div>
      </div>
    </div>
  </div>
</div>
