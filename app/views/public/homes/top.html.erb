<div class="container">
  <div class="row my-4">
    <div class="col">
      <div class="row mb-2">
        <div class="col">
          <div class="d-flex justify-content-center">
            <h2 class="text-align-center">Welcome to Nomadism！</h2>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <div class="d-flex justify-content-center my-2">
            <%= image_tag 'top_image.jpg', size: "540x540" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <% if user_signed_in? %>
            <h5>新着投稿</h5>

            <div class="row">
              <% @posts.last(4).each do |post| %>

                  <div class="col-2 border mr-4">
                  <p>場所名：<%= post.name %></p>
                  <p>説明：<%= post.caption %></p>
                  <p>住所：<%= post.address %></p>
                </div>
              <% end %>
            </div>

            <div class="d-flex justify-content-end">
              <%= link_to '全ての投稿を見る >', posts_path %>
            </div>
          <% else %>
            <div class="btn-wrapper col-6 mx-auto">
              <div class="row mt-3">
                <div class="col">
                  <%= link_to 'ログイン', new_user_session_path, class: "btn btn-lg btn-block btn-info mb-3 sign_in" %>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <%= link_to '新規登録', new_user_registration_path, class: "btn btn-lg btn-block btn-success sign_up mb-3" %>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <%= link_to 'ゲストログイン ( 閲覧用 )', users_guest_sign_in_path, method: :post, class: "btn btn-lg btn-block btn-secondary sign_in" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>