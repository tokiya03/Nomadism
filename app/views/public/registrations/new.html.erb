<div class="container">
  <div class="row no-gutters">
    <div class="col-lg-5 col-md-8 col-sm-12 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">新規登録</h5>

      <div class="form-body p-4">
        <div class="row">
          <div class="col text-center">
            <p>登録情報を入力してください。</p>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
              <%= render "public/shared/error_messages", resource: resource %>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-envelope"></i></span>
                </div>
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'メールアドレス' %>
              </div>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-user"></i></span>
                </div>
                <%= f.text_field :name, class: "form-control", placeholder: '名前 ( ニックネーム )' %>
              </div>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
                </div>
                <% if @minimum_password_length %>
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード ( #{@minimum_password_length}文字以上 )" %>
                <% end %>
              </div>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-user-lock"></i></span>
                </div>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: '確認用パスワード' %>
              </div>

              <%= f.submit '登録する', class: "btn-lg btn-block btn-info my-2" %>
            <% end %>

            <div class="d-flex justify-content-start">
              <%= render "public/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
